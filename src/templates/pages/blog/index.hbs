---
layout: default.hbs
title: Blog
subtitle: Notizen zu Aufgaben meiner t√§glichen Arbeit
name: blog
---
<section class="section">
	<div class="grid-container">
		<div class="grid-100">
			{{> page__headline}}
		</div>
		<div class="grid-60 prefix-20">
			<section class="article__items">
			{{#withSort posts "date"}}
				{{#withSort this.pages "data.date" dir="desc"}}
					<article class="article__item">
						<h2 class="article__headline"><a href="/blog/{{filename}}">{{data.title}}</a></h2>
						<div class="article__toolbar">
							<time datetime="{{formatDate data.date "%Y-%m-%d"}}T00:00" class="article__publishedDate">{{formatDate data.date "%d. %b %Y"}}</time>
						</div>
						<p>{{truncate data.teaser 200 "..."}}</p>
						<p class="text-right">
							<a href="/blog/{{filename}}" title="{{data.title}}" class="btn btn__secondary">weiterlesen</a>
						</p>
					</article>
				{{/withSort}}
			{{/withSort}}
			</section>
		</div>
	</div>
</section>
