{{!-- Slider, wenn Galerie vorhanden, ansonsten lade das Projektbild --}}
<div class="grid-80 prefix-10">
	{{#if images}}
	<div class="owl-carousel owl-theme">		
		{{#each images}}
			<img class="owl-lazy" data-src="{{this}}" alt="">
		{{/each}}
	</div>
	{{else}}
		<img src="{{imageName}}" alt="{{projectTitle}}">
	{{/if}}
</div>
<div class="grid-100">
	<h3 class="page__headline">{{projectTitle}}</h3>
	<p class="page__headline--sub">{{#if this.url}}<a href="{{this.url}}">{{this.url}}</a>{{/if}}</p>
</div>
<div class="grid-80 prefix-10 grid-parent">
	<div class="grid-40 push-60">
		<h4 class="project-description__headline">Kurz und knapp</h4>
		<ul>
			{{#each this.projectTags}}
				<li>{{this}}</li>
			{{/each}}
		</ul>
	</div>
	<div class="grid-60 project-description pull-40">
		<h4 class="project-description__headline">Beschreibung</h4>
		<p class="">{{{description}}}</p>
	</div>
</div>
