<article class="article__item">
	<h2 class="article__headline"><a href="{{paths.dhref}}{{#stem paths.href}}{{/stem}}" title="{{title}}">{{title}}</a></h2>
	<div class="article__toolbar">
		<time datetime="{{formatDate date "%Y-%m-%d"}}T00:00" class="article__publishedDate">{{formatDate date "LL"}}</time>
	</div>
	<p>{{truncate teaser 200 "..."}}</p>
	<p class="text-right">
		<a href="{{paths.dhref}}{{#stem paths.href}}{{/stem}}" title="{{title}}" class="btn btn__secondary">weiterlesen</a>
	</p>
</article>
